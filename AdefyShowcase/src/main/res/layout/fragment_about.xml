<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:background="#33b5e5">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" android:src="@drawable/logo" android:paddingLeft="72dp"
        android:paddingRight="72dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_teaser_1"
        android:id="@+id/textView" android:layout_gravity="center_horizontal"
        android:textColor="#fff" android:paddingLeft="32dp" android:paddingRight="32dp"
        android:typeface="sans" android:textSize="18dp" android:lineSpacingExtra="4dp"
        android:paddingBottom="16dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_teaser_2"
        android:id="@+id/textView2" android:textColor="#fff" android:paddingLeft="32dp"
        android:paddingRight="32dp" android:lineSpacingExtra="4dp" android:textIsSelectable="false"
        android:textSize="18dp" android:typeface="sans"/>
</LinearLayout>